<%= form_with( model: base, url: basis_url(base.id), method: :patch, local: true) do |f| %>
  <!-- render 'shared/error_messages', object: user %>-->

  <%= f.label "拠点番号", class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :id, class: "form-control" %>
  <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :base_name, class: "form-control" %>

  <%= f.label :base_type, class: "label-#{yield(:class_text)}" %><br>
  <!-- f.text_field :base_type, class: "form-control" %>-->
  <%= f.select :base_type, [ ["退勤","退勤"], ["出勤", "出勤"] ], class: "form-control" %>

  
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
  
<% end %>
